       dateOnly:true
        });
      });

    function submit(){
	  var result= confirm("Do want to submit?");
	
	if($("#cmn-toggle-1").is(":checked"))
        {$.get("/led1_on.php"); alert("111");} 
      else
       $.get("led1_off.php");

       if($("#cmn-toggle-2").is(":checked"))
        $.get("led2_on.php"); 
       else
        $.get("led2_off.php");

        if($("#cmn-toggle-3").is(":checked"))
         $.get("led3_on.php"); 
        else
         $.get("led3_off.php");

         if($("#cmn-toggle-4").is(":checked"))
          $.get("led4_on.php"); 
         else
          $.get("led4_off.php"); 
	

