<div id="wrapper">

  <header>

    <div class="site-title">
      <div class="container">
        News Setting Page
      </div>
    </div><!-- /.site-title -->

  </header>
  <div id="main">
    <div class="container">

      <div class="settings">

        <div class="row">
          <div class="question">
            Do you want to receive weather information?
          </div>
          <div class="switch">
            <input id="cmn-toggle-1" name=button1 class="cmn-toggle cmn-toggle-round" type="checkbox">
            <label for="cmn-toggle-1"></label>
          </div>
        </div><!-- /row -->

        <div class="row">
          <div class="question">
            Do you want to receive news?
          </div>
          <div class="switch">
            <input id="cmn-toggle-2" name=button2 class="cmn-toggle cmn-toggle-round" type="checkbox">
            <label for="cmn-toggle-2"></label>
          </div>
        </div><!-- /row -->

        <div class="row">
          <div class="question">
            Do you want to receive popular search word?
          </div>
          <div class="switch">
            <input id="cmn-toggle-3" name=button3 class="cmn-toggle cmn-toggle-round" type="checkbox">
            <label for="cmn-toggle-3"></label>
          </div>
        </div><!-- /row -->

        <div class="row">
          <div class="question">
            Do you want an alarm sounds?
          </div>
          <div class="switch">
            <input id="cmn-toggle-4" name=button4 class="cmn-toggle cmn-toggle-round" type="checkbox">
            <label for="cmn-toggle-4"></label>

          </div>
        </div><!-- /row -->

        <div class="row">
          <div class="question2">
            (Date Hour)
          </div>
            <input type="text" class='datetimepicker' name=date style="height:30px;" vertical-align:bottom >
          <div class="question3">
            (Minute)
          </div>
          <input placeholder="ex) 00~60" name=minute style="height:30px;">

        </div><!-- /row -->
        <div class="dbg_btn" onclick="submit();">SUBMIT</div>
    </div>

    </div>
  </div><!-- #main -->

